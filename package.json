{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@lerna/bootstrap": "^3.18.4",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.7.0",
    "docsify-cli": "^4.4.0",
    "eslint": "^6.6.0",
    "lerna": "^3.18.4",
    "typedoc": "^0.15.4",
    "typedoc-plugin-lerna": "^0.1.0",
    "typescript": "^3.7.2"
  },
  "scripts": {
    "postinstall": "lerna bootstrap --nohoist=node-addon-api",
    "build": "lerna run compile",
    "lint": "eslint . --ext .ts --ext .js",
    "pretest": "npm run lint",
    "test": "lerna run --scope @pipcook/pipcook-core --scope @pipcook/boa test",
    "test:pipeline": "sh ./run_pipeline.sh",
    "typedoc": "typedoc",
    "clean": "lerna run clean",
    "release": "lerna publish from-package -y --no-verify-access --no-push",
    "version": "echo \"::set-output name=lerna-package::$(lerna list)\n\""
  },
  "dependencies": {
    "@changesets/cli": "^2.6.5",
    "@types/jasmine": "^3.5.10",
    "jasmine": "^3.5.0"
  }
}
