export EMSCRIPTEN_VERSION = 1.38.31

export PATH := $(CPYTHON_WASM_ROOT)/ccache:$(CPYTHON_WASM_ROOT)/emsdk/emsdk:$(CPYTHON_WASM_ROOT)/emsdk/emsdk/fastcomp-clang/tag-e$(EMSCRIPTEN_VERSION)/build_tag-e$(EMSCRIPTEN_VERSION)_64/bin:$(CPYTHON_WASM_ROOT)/emsdk/emsdk/node/8.9.1_64bit/bin:$(CPYTHON_WASM_ROOT)/emsdk/emsdk/emscripten/tag-$(EMSCRIPTEN_VERSION):$(CPYTHON_WASM_ROOT)/emsdk/emsdk/binaryen/tag-$(EMSCRIPTEN_VERSION)_64bit_binaryen/bin:$(PATH)

export EMSDK = $(CPYTHON_WASM_ROOT)/emsdk/emsdk
export EM_CONFIG = $(CPYTHON_WASM_ROOT)/emsdk/emsdk/.emscripten
export EM_CACHE = $(CPYTHON_WASM_ROOT)/emsdk/emsdk/.emscripten_cache
export EMSCRIPTEN = $(CPYTHON_WASM_ROOT)/emsdk/emsdk/emscripten/tag-$(EMSCRIPTEN_VERSION)
export BINARYEN_ROOT = $(CPYTHON_WASM_ROOT)/emsdk/emsdk/binaryen/tag-$(EMSCRIPTEN_VERSION)_64bit_binaryen

export PYVERSION=3.7.4
export PYMINOR=$(basename $(PYVERSION))
export HOSTPYTHONROOT=$(CPYTHON_WASM_ROOT)/cpython/build/$(PYVERSION)/host
export HOSTPYTHON=$(HOSTPYTHONROOT)/bin/python3
export TARGETPYTHONROOT=$(CPYTHON_WASM_ROOT)/cpython/installs/python-$(PYVERSION)
export PYTHONINCLUDE=$(CPYTHON_WASM_ROOT)/cpython/installs/python-$(PYVERSION)/include/python$(PYMINOR)

export CPYTHON_WASM_PACKAGE_ABI=1

export SIDE_LDFLAGS=\
	-O3 \
  -s "BINARYEN_METHOD='native-wasm'" \
	-Werror \
  -s EMULATED_FUNCTION_POINTERS=1 \
  -s EMULATE_FUNCTION_POINTER_CASTS=1 \
  -s SIDE_MODULE=1 \
	-s WASM=1 \
  -s "BINARYEN_TRAP_MODE='clamp'" \
  --memory-init-file 0 \
  -s LINKABLE=1 \
  -s EXPORT_ALL=1 \
  -s ERROR_ON_MISSING_LIBRARIES=0
