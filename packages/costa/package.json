{
  "name": "@pipcook/costa",
  "version": "2.0.0-alpha.4",
  "description": "The Pipcook Script Runner",
  "main": "dist/index",
  "types": "dist/index",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "DEBUG=costa* ava",
