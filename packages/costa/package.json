    "compile": "tsc -b tsconfig.json"
  },
  "license": "Apache 2.0",
  "dependencies": {
    "@pipcook/boa": "^2.0.0-alpha.4",
    "@pipcook/pipcook-core": "^2.0.0-alpha.4",
    "debug": "^4.1.1",
    "fs-extra": "^8.1.0",
    "request": "^2.88.2",
    "request-promise": "^4.2.5"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/fs-extra": "^8.0.1",
    "@types/request": "^2.48.4",
    "@types/request-promise": "^4.1.46",
    "ava": "^3.13.0",
    "nyc": "^15.1.0",
    "ts-node": "^8.6.2",
    "typescript": "^4.1.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [],
  "ava": {
    "files": [
      "dist/**/*.test.js",
      "!tests"
