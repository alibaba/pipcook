{
  "name": "@pipcook/costa",
  "version": "1.2.0",
  "description": "The Pipcook Plugin Runtime",
  "main": "dist/runtime",
  "types": "dist/runtime",
  "files": [
    "dist"
  ],
  "scripts": {
    "pretest": "rm -rf .tests",
    "test": "DEBUG=costa* ava",
    "cov": "nyc --reporter=text-summary npm run test",
    "cov:report": "nyc report -r=lcov",
    "build": "npm run clean && npm run compile",
    "dev-build": "npm run clean && npm run dev-compile",
    "clean": "rm -rf ./dist && rm -rf tsconfig.tsbuildinfo",
    "dev-compile": "esbuild ./src/*.ts ./src/**/*.ts ./src/**/**/*.ts --format=cjs --outdir=dist --tsconfig=tsconfig.json",
    "compile": "tsc -b tsconfig.json"
  },
  "license": "Apache 2.0",
  "dependencies": {
    "@pipcook/boa": "^1.2.0",
    "@pipcook/pipcook-core": "^1.2.0",
    "better-opn": "^1.0.0",
    "debug": "^4.1.1",
    "fs-extra": "^8.1.0",
    "request": "^2.88.2",
    "request-promise": "^4.2.5",
    "tar-stream": "^2.1.2"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/fs-extra": "^8.0.1",
    "@types/jasmine": "^3.5.7",
    "@types/request": "^2.48.4",
    "@types/request-promise": "^4.1.46",
    "@types/tar-stream": "^2.1.0",
    "ava": "^3.13.0",
    "nyc": "^15.1.0",
    "ts-node": "^8.6.2",
    "typescript": "^4.1.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [],
  "gitHead": "53e131a069b3112a74ae5d99aa1ab08bec768c7e",
  "ava": {
		"files": [
			"dist/**/*.test.js",
			"!tests"
    ]
  }
}
