{
  "compilerOptions": {
    "resolveJsonModule": true,
    "composite": true,
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "noImplicitAny": true,
    "incremental": true,
    "module": "commonjs",
    "target": "es6",
    "lib": [ "es6" ],
    "skipLibCheck": true,
    "sourceMap": true,
    "esModuleInterop": false
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}